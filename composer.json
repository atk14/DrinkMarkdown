{
        "name": "atk14/drink-markdown",
        "type": "library",
        "description": "Extended PHP Markdown parser tuned for usage in ATK14 projects",
        "keywords": ["markdown", "atk14"],
        "homepage": "https://github.com/atk14/DrinkMarkdown",
        "license": ["MIT"],
        "authors": [
                {
                        "name": "ATK14 Development Team",
                        "homepage": "https://github.com/orgs/atk14/people"
                }
        ],
        "require": {
                "php": ">=5.3.0",
                "scrivo/highlight.php": "^9.18.1",
                "michelf/php-markdown": "1.7.*|1.8.*|1.9.*",
                "ezyang/htmlpurifier": ">=4.8|<=4.13",
                "yarri/link-finder": "2.*",
                "atk14/files": "1.*"
        },
        "require-dev": {
                "atk14/tester": "*",
                "atk14/core": "dev-master",
                "atk14/functions": "dev-master",
                "atk14/string4": "^0.3",
                "smarty/smarty": "4.5.6",
                "atk14/xmole": "*"
        },
        "autoload": {
                "classmap": ["src/lib"]
        }
}
